<mah:MetroWindow x:Class="SIMS.SplashScreenUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        BorderBrush="Transparent"
        Title="SplashScreenUI" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Image Source="Resources/TT_SIMS.png" Width="200" HorizontalAlignment="Left"></Image>
            <Label Content="Please Wait." Name="lblMsg"></Label>
            <mah:MetroProgressBar Name="metroProgressSpinner1"></mah:MetroProgressBar>
        </StackPanel>
        <StackPanel>
            <!--StackPanel.Background>
                <ImageBrush ImageSource="{StaticResource}" />
            </StackPanel.Background-->
        </StackPanel>
    </Grid>
</mah:MetroWindow>
