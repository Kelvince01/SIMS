<local:BaseUserControl x:Class="SIMS.UserControls.ucSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SIMS.UserControls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             Loaded="UcSettings_OnLoaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel></StackPanel>
            <StackPanel Orientation="Horizontal">
                <mah:Tile Name="btnSave" Click="BtnSave_OnClick"></mah:Tile>
                <mah:Tile Name="btnClose" Click="BtnClose_OnClick"></mah:Tile>
            </StackPanel>
        </StackPanel>
    </Grid>
</local:BaseUserControl>
