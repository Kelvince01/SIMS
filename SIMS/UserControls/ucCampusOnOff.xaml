<UserControl x:Class="SIMS.UserControls.ucCampusOnOff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SIMS.UserControls"
             mc:Ignorable="d"
             Loaded="ucCampusOnOff_Load"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Campus Attendent"></Label>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnOn" Click="btnOn_Click" Content="SIGN IN"></Button>
                <Button Name="btnoff" Click="btnoff_Click" Content="SIGN OUT"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="IN :"></Label>
                <Label Name="lblIn" Content="00:00:00"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="OUT"></Label>
                <Label Name="lblOut" Content="00:00:00"></Label>
            </StackPanel>
            <Button Name="btnClose" Click="btnClose_Click" Content="Close"></Button>
        </StackPanel>
    </Grid>
</UserControl>
