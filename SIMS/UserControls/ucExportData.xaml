<local:BaseUserControl x:Class="SIMS.UserControls.ucExportData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SIMS.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Export Stock Data" FontWeight="Bold" FontSize="16" />
        <GroupBox Header="Download">
            <StackPanel>
                <RadioButton Name="rbBuy" Content="From Buy" />
                <RadioButton Name="rbStyle" Content="From Style Size" />

                <StackPanel Orientation="Horizontal">
                    <Button Name="btnExport" Content="Export" Click="btnExport_Click" />
                    <Button Name="btnClose" Content="Close" Click="btnClose_Click" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</local:BaseUserControl>
